<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENIDOS"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="#006666"
        android:textStyle="bold|italic"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/buscador"
        android:id="@+id/imageView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/bares"
                android:id="@+id/imageView1"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="bares"
                android:textSize="25dp"
                android:padding="15dp"
                android:textStyle="bold|italic"
                android:backgroundTint="@color/teal"
                android:textColor="#00FFFF"
                 />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/playa"
                android:id="@+id/imageView2"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Playas"
                android:padding="15dp"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:backgroundTint="@color/teal"
                android:textColor="#00FFFF"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/discoteca"
                android:id="@+id/imageView3"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Discoteca"
                android:padding="15dp"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:backgroundTint="@color/teal"
                android:textColor="#00FFFF"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/hotel"
                android:id="@+id/imageView4"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="hotel"
                android:padding="15dp"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:backgroundTint="@color/teal"
                android:textColor="#00FFFF"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/aero"
                android:id="@+id/imageView5"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="aeropuertos"
                android:padding="15dp"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:backgroundTint="@color/teal"
                android:textColor="#00FFFF"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/restaurante"
                android:id="@+id/imageView6"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Restaurantes"
                android:padding="15dp"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:backgroundTint="@color/teal"
                android:textColor="#00FFFF"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/iglesia"
                android:id="@+id/imageView7"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Iglesias"
                android:padding="15dp"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:backgroundTint="@color/teal"
                android:textColor="#00FFFF"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Comentar"
                android:padding="15dp"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:backgroundTint="@color/teal"
                android:textColor="#00FFFF"/>



        </LinearLayout>

    </ScrollView>

</>
